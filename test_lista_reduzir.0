lista # lista.0

lista_reduzir = args =>
  args[0][.] == 1 ?
    args[0][0] :
  args[0][.] == 2 ?
    args[1]([args[0][0], args[0][1]]) :
  lista_reduzir([
    [args[1]([args[0][0], args[0][1]])
    ...args[0][2:]]
    args[1]
  ])

resultado = lista_reduzir([[1, 2, 3], par => par[0] + par[1]])
resultado
