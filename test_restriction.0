uniteste # ../uniteste.0

// This test verifies that function calls with multiple arguments cause syntax errors
// We can't directly test syntax errors in the test framework, but we can test that
// the single argument syntax works correctly

uniteste.descrever(["Single Argument Restriction", [
  uniteste.iguais([
    (
      // This should work: function with single argument (array)
      soma = args => args[0] + args[1]
      soma([3, 7])
    ), 10])
  uniteste.iguais([
    (
      // This should work: function with no arguments
      hello = () => "Hello"
      hello()
    ), "Hello"])
  uniteste.iguais([
    (
      // This should work: function with single non-array argument
      quadrado = x => x * x
      quadrado(5)
    ), 25])
]])