uniteste # ../integração/uniteste.0

uniteste.descrever({"Sintaxe de Lista com Colchetes" {
  uniteste.descrever({"Lista básica" {
    uniteste.listas_iguais({
      [1 2 3]
      {1 2 3}
    })
  }})
  uniteste.descrever({"Lista vazia" {
    uniteste.listas_iguais({
      []
      {}
    })
  }})
  uniteste.descrever({"Lista de textos" {
    uniteste.listas_iguais({
      ["a" "b" "c"]
      {"a" "b" "c"}
    })
  }})
  uniteste.descrever({"Acesso por índice" {
    uniteste.iguais({
      {
        lista: [10 20 30]
        lista[0]
      }[0]
      10
    })
    uniteste.iguais({
      {
        lista: [10 20 30]
        lista[1]
      }[0]
      20
    })
    uniteste.iguais({
      {
        lista: [10 20 30]
        lista[2]
      }[0]
      30
    })
  }})
  uniteste.descrever({"Fatiamento" {
    uniteste.listas_iguais({
      {
        lista: [1 2 3 4 5]
        lista[0:3]
      }[0]
      [1 2 3]
    })
    uniteste.listas_iguais({
      {
        lista: [1 2 3 4 5]
        lista[2:]
      }[0]
      [3 4 5]
    })
  }})
  uniteste.descrever({"Tamanho" {
    uniteste.iguais({
      {
        lista: [1 2 3 4 5]
        lista[.]
      }[0]
      5
    })
    uniteste.iguais({
      {
        vazia: []
        vazia[.]
      }[0]
      0
    })
  }})
  uniteste.descrever({"Operador de espalhamento" {
    uniteste.listas_iguais({
      {
        lista1: [1 2]
        lista2: [3 4]
        [...lista1 ...lista2]
      }[0]
      [1 2 3 4]
    })
    uniteste.listas_iguais({
      {
        lista: [2 3]
        [1 ...lista 4]
      }[0]
      [1 2 3 4]
    })
  }})
  uniteste.descrever({"Multiplicação (join)" {
    uniteste.iguais({
      ["a" "b" "c"] * " "
      "a b c"
    })
    uniteste.iguais({
      ["1" "2" "3"] * ","
      "1,2,3"
    })
    uniteste.iguais({
      [65 66 67] * ""
      "ABC"
    })
  }})
  uniteste.descrever({"Listas aninhadas" {
    uniteste.listas_iguais({
      {
        matriz: [[1 2] [3 4]]
