      {
        matriz: [[1 2] [3 4]]
        matriz[1][0]
      }[0]
      3
    })
  }})
  uniteste.descrever({"Lista com expressões" {
    uniteste.listas_iguais({
      {
        x: 10
        y: 20
        [x y x + y]
      }[0]
      [10 20 30]
    })
  }})
  uniteste.descrever({"Equivalência com sintaxe de chaves" {
    uniteste.listas_iguais({
      ["Alice" "Bob" "Charlie"]
      {"Alice" "Bob" "Charlie"}
    })
    uniteste.iguais({
      ["Alice" "Bob" "Charlie"][1]
      {"Alice" "Bob" "Charlie"}[1]
    })
    uniteste.iguais({
      [1 2 3][.]
      {1 2 3}[.]
    })
  }})
}})
