uniteste # ../uniteste.0

uniteste.descrever({"Função sem parênteses" {
  uniteste.iguais({
    (
      dobro = n => n * 2
      dobro 5
    ) 10})
  uniteste.iguais({
    (
      triplo = x => x * 3
      triplo 4
    ) 12})
  uniteste.iguais({
    (
      saudacao = nome => `Olá, ${nome}!`
      saudacao "Maria"
    ) "Olá, Maria!"})
  uniteste.iguais({
    (
      // Test function reference with parentheses
      dobro = n => n * 2
      referencia = (dobro)
      // referencia should be the function itself, not a call
      referencia 7
    ) 14})
  uniteste.iguais({
    (
      // Test function in list context
      triplo = x => x * 3
      lista_com_funcao = { (triplo) 5 }
      // Should contain the function and the number 5
      lista_com_funcao[0] 8
    ) 24})
}})