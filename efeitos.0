lista # lista.0

{
  // Lista contendo os nomes dos efeitos - separada para facilitar inclusão de novos efeitos
  nomes_efeitos: {
    "saia"
    "escreva"  
    "obtenha_argumentos"
    "carregue_localmente"
    "carregue_remotamente"
    "verifique_existência"
    "salve_localmente"
  }
  
  // Usar lista.mapear para gerar índices para cada nome de efeito  
  indices_sequenciais: {0 1 2 3 4 5 6}
  
  // Usar lista.mapear para criar as funções de efeito
  // Cada função retorna apenas o índice, deixando o JavaScript montar a lista completa
  funcoes_efeitos: lista.mapear({
    indices_sequenciais
    índice => _ => índice
  })
  
  // Montar o objeto final com os nomes corretos
  // Note: Esta parte ainda é manual devido às limitações da linguagem 0 para Object.fromEntries
  {
    saia: funcoes_efeitos[0]
    escreva: funcoes_efeitos[1]
    obtenha_argumentos: funcoes_efeitos[2]
    carregue_localmente: funcoes_efeitos[3]
    carregue_remotamente: funcoes_efeitos[4]
    verifique_existência: funcoes_efeitos[5]
    salve_localmente: funcoes_efeitos[6]
  }
}[0]